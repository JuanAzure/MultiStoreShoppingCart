
@{
    ViewData["Title"] = "Add Package";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model MultiStoreShoppingCart.Models.Package
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Packages</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="admin" asp-controller="package" asp-action="index">Home</a>
                    </li>
                    <li class="breadcrumb-item active">Add Package</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Package</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" method="post" asp-area="admin" asp-controller="package" asp-action="add">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" asp-for="Name" class="form-control" id="name">
                            </div>

                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" rows="3" placeholder="Enter ..." asp-for="Description"> </textarea>
                            </div>

                            <div class="form-group">
                                <label for="Price">Price (S/)</label>
                                <input type="text" asp-for="Price" class="form-control" id="price">
                            </div>

                            <div class="form-group">
                                <label for="Duration">Duration</label>
                                <input type="text" asp-for="Duration" class="form-control" id="duration">
                            </div>

                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="status" asp-for="Status">
                                <label class="form-check-label" for="Status">Status</label>
                            </div>


                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
